[user]
	name = Oleg Tsyba
	email = oleg.tsyba.ua@gmail.com
[core]
	editor = vim
	quotepath = false
	filemode = false
[color]
	ui = auto
[alias]
	devs = shortlog -sen
	hide = stash -u
	la = log --oneline --decorate --graph --all
	ld = log --pretty=format:'%C(yellow)%h%C(reset) - %aE [%C(green)%aD%C(reset)] %s' --decorate
	ll = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s' --decorate
	ls = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s' --decorate -13
	lg = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s' --graph -E -i --grep
	loc = log --branches --not --remotes
	s = status -sb
	cma = commit --amend --no-edit

[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[rebase]
	autosquash = true
